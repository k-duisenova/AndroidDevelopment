<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FeedFragment">
    <LinearLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#3B6FA1"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_camera_alt_black_24dp"
            />
        <TextView
            android:layout_width="54dp"
            android:layout_height="37dp"
            android:text="News"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="25dp"
            android:fontFamily="sans-serif"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="0dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/bar"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"

        android:background="@android:color/white"
        android:layout_marginTop="56dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_proPic1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/vkpj" />

        <TextView
            android:id="@+id/editText"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/iv_proPic1"
            android:ems="10"
            android:hint="What's new?"
            android:inputType="textPersonName"
            android:textColor="#939699" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="100dp"
            android:src="@drawable/ic_image_black_24dp"/>

        <ImageView
            android:id="@+id/iv_translation"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="16dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"

            android:src="@drawable/translation" />
    </LinearLayout>
    <View
        android:id="@+id/view1"
        android:layout_height="10dp"
        android:layout_width="match_parent"
        android:background="#d3d3d3"
        android:layout_below="@id/top"
        android:layout_marginTop="105dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/stories"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:layout_below="@+id/view1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="0dp"
        android:background="@android:color/white"

        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">


        <ImageView
            android:id="@+id/iv_stories1"
            android:layout_width="60dp"
            android:layout_height="57dp"
            android:layout_marginStart="5dp"
            android:adjustViewBounds="true"


            android:scaleType="fitCenter"
            android:src="@drawable/stories"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2" />

        <ImageView
            android:id="@+id/iv_stories2"
            android:layout_width="60dp"
            android:layout_height="57dp"
            android:layout_marginStart="4dp"
            android:adjustViewBounds="true"

            android:scaleType="fitCenter"
            android:src="@drawable/icon2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_stories4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.078" />

        <ImageView
            android:id="@+id/iv_stories3"
            android:layout_width="60dp"
            android:layout_height="57dp"
            android:layout_marginStart="5dp"
            android:adjustViewBounds="true"

            android:scaleType="fitCenter"
            android:src="@drawable/icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_stories1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2" />

        <ImageView
            android:id="@+id/iv_stories4"
            android:layout_width="60dp"
            android:layout_height="57dp"
            android:layout_marginStart="8dp"
            android:adjustViewBounds="true"

            android:scaleType="fitCenter"
            android:src="@drawable/icon1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_stories3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="50dp"
            android:text="Kuralay"
            android:textSize="12sp"
            android:textColor="#939699"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/iv_stories1"
            app:layout_constraintTop_toTopOf="@+id/iv_stories1" />

        <TextView
            android:id="@+id/stories3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="53dp"
            android:textSize="12sp"
            android:text="Inspire"
            android:textColor="#939699"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/iv_stories4"
            app:layout_constraintTop_toTopOf="@+id/iv_stories4"
            app:layout_constraintVertical_bias="0.285" />

        <TextView
            android:id="@+id/stories2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="14dp"
            android:layout_marginTop="56dp"
            android:textSize="12sp"
            android:text="Study"
            android:textColor="#939699"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/iv_stories3"
            app:layout_constraintTop_toTopOf="@+id/iv_stories3"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/stories4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="10dp"
            android:layout_marginTop="59dp"
            android:textSize="12sp"
            android:text="Yonce"
            android:textColor="#939699"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/iv_stories2"
            app:layout_constraintTop_toTopOf="@+id/iv_stories2"
            app:layout_constraintVertical_bias="0.111" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/view2"
        android:layout_height="8dp"
        android:layout_width="match_parent"
        android:background="#d3d3d3"
        android:layout_below="@id/top"
        android:layout_marginTop="210dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:layout_marginTop="216dp"
        android:layout_below="@+id/stories"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/item_news" />





</FrameLayout>